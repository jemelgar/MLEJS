                <h2>
                  $ <%=
                  (producto.price-((producto.price*producto.discount)/100)).toLocaleString('en-US',
                  {minimumFractionDigits: 2})%>
                </h2>
                <%if(producto.discount){%>
                <span> $ <%=producto.discount%>% OFF</span>

                <%}%>
                <p><%=producto.name%></p>
                <i class="fas fa-truck"></i>
              </article>
            </a>
          </section>
        </div>

        <% }%>
      </div>
    </div>
    <!-- /Ofertas -->

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
  </body>
</html>
